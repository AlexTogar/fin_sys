<div class="page-header">
  <%= link_to reasons_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_reason_path(@reason), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show reason</h1>
</div>

<dl class="dl-horizontal">
  <dt>Reason:</dt>
  <dd><%= @reason.reason %></dd>

  <dt>Sign:</dt>
  <dd><%= @reason.sign %></dd>

  <dt>Often:</dt>
  <dd><%= @reason.often %></dd>

  <dt>Local:</dt>
  <dd><%= @reason.local %></dd>

  <dt>User:</dt>
  <dd><%= @reason.user %></dd>

  <dt>Deleted:</dt>
  <dd><%= @reason.deleted %></dd>

</dl>
