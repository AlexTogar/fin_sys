<%= form_for(@reason, html: { class: "form-horizontal inside-form", role: "form" }) do |f| %>
  <% if @reason.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@reason.errors.count, "error") %> prohibited this reason from being saved:</h4>

      <ul>
      <% @reason.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :reason, class: "control-label" %>
    <div class="">
      <%= f.text_field :reason, class: "form-control", required: "required", autofocus: "autofocus" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sign_minus, class: "control-label" %>
    <div class="">
      <%= f.check_box :sign, class: "form-control", checked: "checked" %>
    </div>
  </div>
  <div class="form-group disp_none">
    <%= f.label :often, class: "control-label" %>
    <div class="">
      <%= f.number_field :often, class: "form-control", value: "0" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :local, class: "control-label" %>
    <div class="">
      <%= f.check_box :local, class: "form-control" %>
    </div>
  </div>

  <%#= my_toggle_tag_scaffold(toggle_name: "Local", class_one: "local_p" , class_two: "local_j", name_one: "Personal", name_two: "Joint") %>

  <div class="form-group disp_none">
    <%= f.label :user, class: "control-label" %>
    <div class="">
      <%= f.text_field :user, class: "form-control" , value: "#{current_user.id}" %>
    </div>
  </div>
  <div class="form-group disp_none">
    <%= f.label :deleted, class: "control-label" %>
    <div class="">
      <%= f.check_box :deleted, class: "form-control", value: "false" %>
    </div>
  </div>


  <div class="form-group">
    <div class="">
      <%= f.submit class: "btn btn-primary gradient" %>
    </div>
  </div>
<% end %>
