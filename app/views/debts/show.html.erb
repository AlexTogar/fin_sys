  <dd><%= @debt.sum %></dd>

  <dt>Sign:</dt>
  <dd><%= @debt.sign %></dd>

  <dt>Debtor:</dt>
  <dd><%= @debt.debtor %></dd>

  <dt>Description:</dt>
