<div class="page-header">
  <%= link_to new_family_path, class: 'btn btn-outline-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Family
  <% end %>
  <h1>Listing families</h1>
</div>

<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
            <th>Name</th>
            <th>Connect</th>
            <th>User</th>
            <th>Deleted</th>
            <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @families) do |family| %>
            <td><%= family.name %></td>
            <td><%= family.connect %></td>
            <td><%= family.user %></td>
            <td><%= family.deleted %></td>
            <td><span class="table-icon primary"></span> <%= link_to 'Edit', edit_family_path(family) %></td>
        <td><span class="table-icon danger"></span> <%= link_to 'Destroy', family, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
