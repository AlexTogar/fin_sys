<%= form_for(@destination, html: { class: "form-horizontal inside-form", role: "form" }) do |f| %>
  <% if @destination.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@destination.errors.count, "error") %> prohibited this destination from being saved:</h4>

      <ul>
      <% @destination.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "control-label" %>
    <div class="">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sum, class: "control-label" %>
    <div class="">
      <%= f.number_field :sum, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :end_date, class: "control-label" %>
    <div class="">
      <%= f.date_select :end_date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :portion_sum, class: "control-label" %>
    <div class="">
      <%= f.number_field :portion_sum, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "control-label" %>
    <div class="">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :deleted, class: "control-label" %>
    <div class="">
      <%= f.check_box :deleted, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="">
      <%= f.submit class: "btn btn-primary gradient" %>
    </div>
  </div>
<% end %>
